@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<center><img src="images/logo.jpg" width="400" /></center>


<style>
    /* ... (Your existing styles remain unchanged) ... */

    /* Style for the delete button */
    .btn-delete {
        background-color: #1134A6;
        color: #ffffff;
        border: 1px solid #1134A6;
    }

        .btn-delete:hover {
            background-color: #CC0000;
            color: #ffffff;
        }

    /* Style for the compose button */
    .btn-compose {
        background-color: #4CBB17;
        color: #ffffff;
        border: 1px solid #086623;
    }

        .btn-compose:hover {
            background-color: #086623;
            color: #ffffff;
        }
</style>



<table class="table">
    <thead>
        <!-- Corrected tag name -->
        <tr>
            <th>From</th>
            <th>Subject</th>
            <th>Date/Time</th>
            <th>Delete</th>
        </tr>
    </thead>
    <!-- ... rest of the code ... -->


    <tbody>
        @foreach (var item in Model.listEmails)
        {
            <tr>
                <td>@item.EmailSender</td>
                <td>
                    @if (item.EmailIsRead.Equals("0")) {
                        <img src="images/yellow.gif" height="10pt">

                    }
                    else if (item.EmailIsRead.Equals("1"))
                    {
                        //<img src="images/images.png" height="10pt">
                        
                    }





                    <a href="ReadEmail?emailid=@item.EmailID">@item.EmailSubject</a></td>


                <td>@item.EmailDate</td>
                <td>





                    <a class="btn btn-primary btn-delete btn-sm" href="DeleteEmail?emailid=@item.EmailID">Delete</a>
                

                </td>

            </tr>
        }
    </tbody>
</table>


<a class="btn btn-primary btn-compose btn-sm" href="/ComposeEmail?Sender=@User.Identity.Name">Compose New Email</a>